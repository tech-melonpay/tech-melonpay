<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.sumsub.sns.core.widget.SNSToolbarView
        android:id="@+id/sns_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sns_fragment_content"
        android:paddingLeft="@dimen/sns_margin_medium"
        android:paddingRight="@dimen/sns_margin_medium"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">
        <com.sumsub.sns.core.widget.SNSH1TextView
            android:gravity="center"
            android:id="@+id/sns_title"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sns_toolbar"/>
        <com.sumsub.sns.core.widget.SNSSubtitle2TextView
            android:gravity="center"
            android:id="@+id/sns_subtitle"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sns_margin_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sns_title"/>
        <ScrollView
            android:id="@+id/sns_form_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/sns_primary_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sns_subtitle"/>
        <com.sumsub.sns.core.widget.pincode.SNSPinView
            android:id="@+id/sns_pin_code"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sns_margin_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sns_subtitle"/>
        <com.sumsub.sns.core.widget.SNSSubtitle2TextView
            android:id="@+id/sns_pin_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sns_margin_medium"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/sns_pin_code"
            app:layout_constraintStart_toStartOf="@+id/sns_pin_code"
            app:layout_constraintTop_toBottomOf="@+id/sns_pin_code"
            app:sns_textColor="?attr/colorError"/>
        <com.sumsub.sns.core.widget.SNSTextButton
            android:id="@+id/sns_resend_verification_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sns_margin_large"
            android:minHeight="@dimen/sns_min_button_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sns_pin_error"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:id="@+id/sns_guideline_center"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintGuide_percent="0.5"/>
        <com.sumsub.sns.core.widget.SNSImageView
            android:id="@+id/sns_status_icon"
            android:background="@drawable/sns_bg_circle"
            android:visibility="gone"
            android:layout_width="@dimen/sns_icon_size_large"
            android:layout_height="@dimen/sns_icon_size_large"
            android:layout_marginBottom="@dimen/sns_margin_medium"
            android:scaleType="center"
            app:layout_constraintBottom_toTopOf="@+id/sns_guideline_center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <com.sumsub.sns.core.widget.SNSH2TextView
            android:gravity="center"
            android:id="@+id/sns_status_title"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sns_margin_medium"
            app:layout_constraintBottom_toTopOf="@+id/sns_status_comment"
            app:layout_constraintTop_toBottomOf="@+id/sns_status_icon"
            app:layout_constraintVertical_chainStyle="packed"/>
        <com.sumsub.sns.core.widget.SNSSubtitle2TextView
            android:gravity="center"
            android:id="@+id/sns_status_comment"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/sns_primary_button"
            app:layout_constraintTop_toBottomOf="@+id/sns_status_title"
            app:layout_constraintVertical_chainStyle="packed"/>
        <com.sumsub.sns.core.widget.SNSPrimaryButton
            android:id="@+id/sns_primary_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/sns_secondary_button"
            app:layout_goneMarginBottom="@dimen/sns_margin_medium"/>
        <com.sumsub.sns.core.widget.SNSSecondaryButton
            android:id="@+id/sns_secondary_button"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sns_margin_medium"
            app:layout_constraintBottom_toTopOf="@+id/sns_powered"/>
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sns_margin_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            layout="@layout/sns_layout_powered"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.sumsub.sns.core.widget.SNSErrorBottomSheetView
        android:id="@+id/sns_error_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_gravity="bottom"
        android:id="@+id/sns_web_view_bottom_sheet_container"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.sumsub.sns.core.widget.SNSBottomSheetView
            android:id="@+id/sns_web_view_bottom_sheet"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/bottom_sheet_behavior">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.sumsub.sns.core.widget.SNSToolbarView
                    android:id="@+id/sns_bottomsheet_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <WebView
                    android:id="@+id/sns_webview"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sns_subtitle"/>
            </LinearLayout>
        </com.sumsub.sns.core.widget.SNSBottomSheetView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</FrameLayout>
