<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/fragment_crypto_list_0"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_weight="1"
        android:overScrollMode="never"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/FadedScrollBars">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_crypto"
                android:background="@drawable/tabs_background_white"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tabSelectedTextColor="@color/black"
                app:tabTextColor="@color/middle_gray"
                style="@style/RoundedTabLayoutStyleWhite">
                <com.google.android.material.tabs.TabItem
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/saved"/>
                <com.google.android.material.tabs.TabItem
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/under_review"/>
                <com.google.android.material.tabs.TabItem
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/new_payment"/>
            </com.google.android.material.tabs.TabLayout>
            <ViewFlipper
                android:id="@+id/viewFlipper"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:measureAllChildren="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tab_crypto">
                <com.airbnb.epoxy.EpoxyRecyclerView
                    android:id="@+id/epoxyRecyclerView"
                    android:background="@color/background"
                    android:paddingBottom="108dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:overScrollMode="never"/>
                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/FadedScrollBars">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:background="@color/background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.luminary.business.presentation.ui.views.customtextinput.CustomTextInputLayout
                            android:textColorHint="@color/middle_gray"
                            android:id="@+id/cryptoInputLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:hint="@string/hub_crypto"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            app:hintTextAppearance="@style/TextHint"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            style="@style/Widget.Luminary.TextInputLayout">
                            <com.luminary.business.presentation.ui.views.customtextinput.CustomTextInputEditText
                                android:id="@+id/cryptoInputView"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:clickable="false"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:cursorVisible="false"
                                android:inputType="textEmailAddress"
                                android:importantForAutofill="no"
                                style="@style/Widget.Luminary.TextInputEditTextNoHint"/>
                        </com.luminary.business.presentation.ui.views.customtextinput.CustomTextInputLayout>
                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            app:layout_constraintBottom_toBottomOf="@+id/cryptoInputLayout"
                            app:layout_constraintEnd_toEndOf="@+id/cryptoInputLayout"
                            app:layout_constraintTop_toTopOf="@+id/cryptoInputLayout"
                            app:srcCompat="@drawable/ic_arrow_down"/>
                        <ImageView
                            android:id="@+id/ivCurrency"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="13dp"
                            android:layout_marginStart="16dp"
                            app:layout_constraintBottom_toBottomOf="@+id/cryptoInputLayout"
                            app:layout_constraintStart_toStartOf="@+id/cryptoInputLayout"/>
                        <com.luminary.business.presentation.ui.views.customtextinput.CustomTextInputLayout
                            android:textColorHint="@color/middle_gray"
                            android:id="@+id/networkInputLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:hint="@string/network"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            app:hintTextAppearance="@style/TextHint"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/cryptoInputLayout"
                            style="@style/Widget.Luminary.TextInputLayout">
                            <com.luminary.business.presentation.ui.views.customtextinput.CustomTextInputEditText
                                android:id="@+id/networkInputView"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:clickable="false"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:cursorVisible="false"
                                android:inputType="textEmailAddress"
                                android:importantForAutofill="no"
                                style="@style/Widget.Luminary.TextInputEditTextNoHint"/>
                        </com.luminary.business.presentation.ui.views.customtextinput.CustomTextInputLayout>
                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            app:layout_constraintBottom_toBottomOf="@+id/networkInputLayout"
                            app:layout_constraintEnd_toEndOf="@+id/networkInputLayout"
                            app:layout_constraintTop_toTopOf="@+id/networkInputLayout"
                            app:srcCompat="@drawable/ic_arrow_down"/>
                        <com.luminary.business.presentation.ui.views.customtextinput.CustomTextInputLayout
                            android:textColorHint="@color/middle_gray"
                            android:id="@+id/addressInputLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:hint="@string/address"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            app:hintTextAppearance="@style/TextHint"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/networkInputLayout"
                            style="@style/Widget.Luminary.TextInputLayout">
                            <com.luminary.business.presentation.ui.views.customtextinput.CustomTextInputEditText
                                android:gravity="top"
                                android:id="@+id/addressInputView"
                                android:layout_width="match_parent"
                                android:layout_height="96dp"
                                android:lines="10"
                                android:minLines="10"
                                android:singleLine="false"
                                android:inputType="textMultiLine"
                                app:textInputMask="email"
                                style="@style/Widget.Luminary.TextInputEditTextNoHintMultilines"/>
                        </com.luminary.business.presentation.ui.views.customtextinput.CustomTextInputLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.core.widget.NestedScrollView>
            </ViewFlipper>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/empty_layout"
                android:background="@drawable/bg_empty_state"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="@dimen/empty_view_margin"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tab_crypto">
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/neutral_600"
                    android:id="@+id/empty_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/you_do_not_have_any_approved_crypto_addresses"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/Text.Inter.Medium"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.button.MaterialButton
        android:enabled="false"
        android:id="@+id/confirm_button"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="98dp"
        android:text="@string/confirm"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/AuthButton"/>
    <com.google.android.material.button.MaterialButton
        android:enabled="false"
        android:id="@+id/confirm_button_k"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="58dp"
        android:text="@string/confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/AuthButtonTopKeyboard"/>
</LinearLayout>
