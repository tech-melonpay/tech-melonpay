<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sns_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/sns_margin_medium">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/sns_guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="@dimen/sns_margin_medium"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/sns_guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="@dimen/sns_margin_medium"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/sns_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="sns_document,sns_phone"/>
    <com.sumsub.sns.core.widget.SNSH1TextView
        android:gravity="center"
        android:id="@+id/sns_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/sns_margin_medium"
        app:layout_constraintEnd_toEndOf="@+id/sns_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/sns_guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/sns_toolbar"/>
    <com.sumsub.sns.core.widget.SNSSubtitle2TextView
        android:gravity="center"
        android:id="@+id/sns_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sns_margin_small"
        app:layout_constraintEnd_toEndOf="@+id/sns_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/sns_guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/sns_title"/>
    <com.sumsub.sns.core.widget.SNSImageView
        android:id="@+id/sns_document"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sns_ic_mrtd_passport"
        android:contentDescription="@null"
        app:layout_constraintBottom_toTopOf="@+id/sns_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sns_subtitle"
        app:layout_constraintVertical_bias="0.27"/>
    <com.sumsub.sns.core.widget.SNSImageView
        android:id="@+id/sns_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sns_ic_mrtd_hand"
        android:contentDescription="@null"
        app:layout_constraintBottom_toTopOf="@+id/sns_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sns_subtitle"
        app:layout_constraintVertical_bias="0.49"/>
    <com.sumsub.sns.core.widget.SNSImageView
        android:id="@+id/sns_nfc_icon"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/sns_control_normal"
        android:contentDescription="@null"
        app:layout_constraintBottom_toTopOf="@+id/sns_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sns_subtitle"/>
    <com.sumsub.sns.core.widget.SNSDotsProgressView
        android:id="@+id/sns_reading_progress"
        android:layout_width="0dp"
        android:layout_height="@dimen/sns_margin_small_tiny"
        android:layout_marginTop="@dimen/sns_margin_large"
        app:layout_constraintLeft_toLeftOf="@+id/sns_nfc_icon"
        app:layout_constraintRight_toRightOf="@+id/sns_nfc_icon"
        app:layout_constraintTop_toBottomOf="@+id/sns_nfc_icon"/>
    <com.sumsub.sns.core.widget.SNSImageView
        android:id="@+id/sns_status"
        android:background="@drawable/sns_bg_circle"
        android:visibility="invisible"
        android:layout_width="@dimen/sns_icon_size_large"
        android:layout_height="@dimen/sns_icon_size_large"
        android:scaleType="center"
        android:contentDescription="@null"
        app:layout_constraintBottom_toTopOf="@+id/sns_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sns_subtitle"/>
    <FrameLayout
        android:id="@+id/sns_custom_view"
        android:visibility="invisible"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/sns_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sns_subtitle"/>
    <com.sumsub.sns.core.widget.SNSSubtitle1TextView
        android:gravity="center"
        android:id="@+id/sns_hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sns_margin_large"
        app:layout_constraintBottom_toTopOf="@+id/sns_primary_button"
        app:layout_constraintEnd_toEndOf="@+id/sns_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/sns_guideline_start"/>
    <com.sumsub.sns.core.widget.SNSPrimaryButton
        android:id="@+id/sns_primary_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sns_margin_small"
        app:layout_constraintBottom_toTopOf="@+id/sns_secondary_button"
        app:layout_constraintEnd_toEndOf="@+id/sns_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/sns_guideline_start"/>
    <com.sumsub.sns.core.widget.SNSSecondaryButton
        android:id="@+id/sns_secondary_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sns_margin_medium"
        app:layout_constraintBottom_toTopOf="@+id/sns_powered"
        app:layout_constraintEnd_toEndOf="@+id/sns_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/sns_guideline_start"/>
    <com.sumsub.sns.core.widget.SNSToolbarView
        android:id="@+id/sns_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>
    <include
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/sns_guideline_end"
        app:layout_constraintStart_toStartOf="@+id/sns_guideline_start"
        layout="@layout/sns_layout_powered"/>
</androidx.constraintlayout.widget.ConstraintLayout>
