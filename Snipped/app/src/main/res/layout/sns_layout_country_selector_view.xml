<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/sns_margin_medium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.sumsub.sns.core.widget.SNSFlagView
        android:id="@+id/sns_item_start_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.sumsub.sns.core.widget.SNSSubtitle1TextView
        android:id="@+id/sns_item_title"
        android:duplicateParentState="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sns_margin_small"
        android:layout_marginEnd="@dimen/sns_margin_small"
        app:layout_constraintBottom_toTopOf="@+id/sns_item_subtitle"
        app:layout_constraintEnd_toStartOf="@+id/sns_item_end_icon"
        app:layout_constraintStart_toEndOf="@+id/sns_item_start_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_goneMarginEnd="@dimen/sns_margin_small"
        app:layout_goneMarginStart="@dimen/sns_margin_small"/>
    <com.sumsub.sns.core.widget.SNSSubtitle1WeakTextView
        android:id="@+id/sns_item_title_placeholder"
        android:visibility="gone"
        android:duplicateParentState="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sns_margin_small"
        android:layout_marginEnd="@dimen/sns_margin_small"
        app:layout_constraintBottom_toTopOf="@+id/sns_item_subtitle"
        app:layout_constraintEnd_toStartOf="@+id/sns_item_end_icon"
        app:layout_constraintStart_toEndOf="@+id/sns_item_start_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_goneMarginEnd="@dimen/sns_margin_small"
        app:layout_goneMarginStart="@dimen/sns_margin_small"/>
    <com.sumsub.sns.core.widget.SNSBodyTextView
        android:id="@+id/sns_item_subtitle"
        android:duplicateParentState="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/sns_item_title"
        app:layout_constraintStart_toStartOf="@+id/sns_item_title"
        app:layout_constraintTop_toBottomOf="@+id/sns_item_title"/>
    <com.sumsub.sns.core.widget.SNSImageView
        android:id="@+id/sns_item_end_icon"
        android:duplicateParentState="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
