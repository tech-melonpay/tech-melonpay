<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/fragment_exchange_0"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@+id/button_done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        style="@style/FadedScrollBars">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fromInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:hintTextColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Widget.Luminary.TextInputLayout.Amount">
                <com.luminary.business.presentation.ui.views.customtextinput.CustomTextInputEditText
                    android:textSize="@dimen/text_size_24"
                    android:id="@+id/fromInputView"
                    android:background="@drawable/sl_text_input_bg"
                    android:paddingBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:inputType="phone"
                    app:textInputMask="amount"
                    app:textSizeAfterDot="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <ImageView
                android:id="@+id/img_arrow_from"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/fromInputLayout"
                app:layout_constraintEnd_toEndOf="@+id/fromInputLayout"
                app:layout_constraintTop_toTopOf="@+id/fromInputLayout"
                app:srcCompat="@drawable/ic_arrow_down"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_from"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/fromInputLayout"
                app:layout_constraintEnd_toStartOf="@+id/img_arrow_from"
                app:layout_constraintTop_toTopOf="@+id/fromInputLayout"
                app:shapeAppearanceOverlay="@style/circleImageView"
                app:srcCompat="@drawable/ic_gb"/>
            <View
                android:id="@+id/view3"
                android:background="@drawable/dash_line"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/constraintLayout3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/constraintLayout3"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout3"
                android:background="@drawable/currency_border"
                android:layout_width="143dp"
                android:layout_height="40dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/from_account_amount">
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/dark_green"
                    android:id="@+id/currency_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/Text.Inter.Medium"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/toInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:hintTextColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
                style="@style/Widget.Luminary.TextInputLayout.Amount">
                <com.luminary.business.presentation.ui.views.customtextinput.CustomTextInputEditText
                    android:textSize="@dimen/text_size_24"
                    android:id="@+id/toInputView"
                    android:background="@drawable/sl_text_input_bg"
                    android:paddingBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:inputType="numberDecimal"
                    app:textInputMask="amount"
                    app:textSizeAfterDot="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <ImageView
                android:id="@+id/img_arrow_to"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/toInputLayout"
                app:layout_constraintEnd_toEndOf="@+id/toInputLayout"
                app:layout_constraintTop_toTopOf="@+id/toInputLayout"
                app:srcCompat="@drawable/ic_arrow_down"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_to"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/toInputLayout"
                app:layout_constraintEnd_toStartOf="@+id/img_arrow_to"
                app:layout_constraintTop_toTopOf="@+id/toInputLayout"
                app:shapeAppearanceOverlay="@style/circleImageView"
                app:srcCompat="@drawable/ic_euro"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/neutral_600"
                android:id="@+id/from_account_amount"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@+id/fromInputLayout"
                app:layout_constraintTop_toBottomOf="@+id/fromInputLayout"
                style="@style/Text.Inter"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/neutral_600"
                android:id="@+id/from_account_amount_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@+id/from_account_amount"
                app:layout_constraintStart_toEndOf="@+id/from_account_amount"
                style="@style/Text.Inter"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/neutral_600"
                android:id="@+id/to_account_amount"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="64dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/toInputLayout"
                app:layout_constraintTop_toBottomOf="@+id/toInputLayout"
                style="@style/Text.Inter"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/neutral_600"
                android:id="@+id/to_account_amount_dot"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@+id/to_account_amount"
                app:layout_constraintStart_toEndOf="@+id/to_account_amount"
                style="@style/Text.Inter"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <Button
        android:enabled="false"
        android:textSize="15sp"
        android:id="@+id/button_done"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="@dimen/bottom_margin"
        android:text="@string/continue_btn"
        android:textAllCaps="false"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/BlackButton"/>
    <Button
        android:enabled="false"
        android:textSize="15sp"
        android:id="@+id/button_done_k"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/continue_btn"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/BlackButtonTopKeyboard"/>
</androidx.constraintlayout.widget.ConstraintLayout>
