<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.sumsub.sns.core.widget.SNSImageView
        android:id="@+id/sns_status_icon"
        android:background="@drawable/sns_bg_circle"
        android:visibility="gone"
        android:layout_width="@dimen/sns_icon_size_large"
        android:layout_height="@dimen/sns_icon_size_large"
        android:layout_marginBottom="@dimen/sns_margin_medium"
        android:scaleType="center"/>
    <com.sumsub.sns.core.widget.SNSH2TextView
        android:gravity="center"
        android:id="@+id/sns_status_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sns_margin_medium"/>
    <com.sumsub.sns.core.widget.SNSSubtitle2TextView
        android:gravity="center"
        android:id="@+id/sns_status_comment"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
