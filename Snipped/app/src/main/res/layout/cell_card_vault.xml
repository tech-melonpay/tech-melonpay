<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/cell_card_vault_0"
    android:background="@drawable/bg_white_16"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="146dp"
    android:layout_marginTop="12dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_visa_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="13sp"
        android:id="@+id/vaultNameTextView"
        android:tag="binding_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Text.Inter.Medium"/>
    <TextView
        android:textSize="20sp"
        android:textColor="@color/black"
        android:id="@+id/vaultAmountTextView"
        android:tag="binding_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/vaultNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Text.Inter.SemiBold"/>
    <TextView
        android:textSize="15sp"
        android:id="@+id/availableBalanceTextView"
        android:tag="binding_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/vaultAmountTextView"
        app:layout_constraintStart_toEndOf="@+id/vaultAmountTextView"
        app:layout_constraintTop_toTopOf="@+id/vaultAmountTextView"
        style="@style/Text.Inter.Book"/>
    <ImageView
        android:tag="binding_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_money"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
