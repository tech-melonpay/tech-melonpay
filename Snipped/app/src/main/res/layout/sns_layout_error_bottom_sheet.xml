<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.sumsub.sns.core.widget.SNSBottomSheetView
        android:orientation="vertical"
        android:id="@+id/sns_bottom_sheet"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/bottom_sheet_behavior">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:padding="@dimen/sns_margin_medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.sumsub.sns.core.widget.SNSImageView
                android:id="@+id/sns_start_icon"
                android:layout_width="@dimen/sns_icon_size_medium"
                android:layout_height="@dimen/sns_icon_size_medium"
                app:layout_constraintBottom_toBottomOf="@+id/sns_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="?attr/colorOnError"/>
            <com.sumsub.sns.core.widget.SNSSubtitle2TextView
                android:gravity="center_vertical"
                android:id="@+id/sns_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sns_margin_small"
                android:minHeight="@dimen/sns_icon_size_medium"
                android:layout_marginStart="@dimen/sns_margin_small_tiny"
                app:layout_constraintBottom_toTopOf="@+id/sns_primary_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/sns_start_icon"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.sumsub.sns.core.widget.SNSPrimaryButton
                android:id="@+id/sns_primary_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/sns_secondary_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sns_text"/>
            <com.sumsub.sns.core.widget.SNSSecondaryButton
                android:id="@+id/sns_secondary_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sns_primary_button"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.sumsub.sns.core.widget.SNSBottomSheetView>
</merge>
