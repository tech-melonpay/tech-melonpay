<?xml version="1.0" encoding="utf-8"?>
<com.sumsub.sns.core.widget.SNSBackgroundView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.sumsub.sns.core.widget.SNSToolbarView
        android:id="@+id/sns_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sns_fragment_content"
        android:paddingLeft="@dimen/sns_margin_medium"
        android:paddingRight="@dimen/sns_margin_medium"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/sns_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/sns_margin_medium"
            android:layout_marginBottom="@dimen/sns_margin_medium"
            app:layout_constraintBottom_toTopOf="@+id/sns_primary_button"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.sumsub.sns.core.widget.SNSPrimaryButton
            android:id="@+id/sns_primary_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sns_margin_medium"
            app:layout_constraintBottom_toTopOf="@+id/sns_powered"/>
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sns_margin_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            layout="@layout/sns_layout_powered"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.sumsub.sns.core.widget.SNSBackgroundView>
