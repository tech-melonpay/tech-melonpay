<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewFlipper"
    android:tag="layout/fragment_card_details_0"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:measureAllChildren="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/gray_background_empty_cards"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="16dp">
            <TextView
                android:textSize="28sp"
                android:textColor="@color/black"
                android:id="@+id/tvTitleEmptyCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/not_cards_yet"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                style="@style/Text.Inter.Medium"/>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/you_can_create_new_cards"
                android:textAlignment="center"
                android:layout_marginHorizontal="42dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitleEmptyCard"
                app:layout_constraintVertical_chainStyle="packed"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <Button
            android:id="@+id/button_accept"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="19dp"
            android:text="@string/add"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/BlackButton"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_transactions"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="@dimen/bottom_margin"
            android:tint="@color/white"
            android:text="@string/transactions"
            android:layout_marginHorizontal="16dp"
            app:icon="@drawable/ic_card_transaction"
            app:iconGravity="textStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            marginTop="16dp"
            style="@style/BlackButton"/>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:paddingBottom="16dp"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="true"
        style="@style/FadedScrollBars">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="55dp">
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                android:id="@+id/dots_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:dotsColor="@color/dot_indicator_color"
                app:dotsCornerRadius="8dp"
                app:dotsSize="6dp"
                app:dotsSpacing="6dp"
                app:dotsWidthFactor="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewPager"
                app:selectedDotColor="@color/black"/>
            <com.luminary.business.presentation.ui.views.ButtonSmall
                android:id="@+id/btnUnfreeze"
                android:layout_width="142dp"
                android:layout_height="40dp"
                android:layout_marginTop="24dp"
                app:backgroundDrawable="@drawable/bg_button_black"
                app:iconDrawable="@drawable/ic_card_freeze"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dots_indicator"
                app:text="@string/unfreeze"
                app:textColor="@color/white"
                app:tintColor="@color/white"/>
            <View
                android:id="@+id/view2"
                android:background="@color/gray"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnUnfreeze"/>
            <TextView
                android:textSize="15sp"
                android:textColor="@color/black"
                android:id="@+id/tvLimits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:text="@string/limits"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2"
                style="@style/Text.Inter.Medium"/>
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_limits"
                android:background="@drawable/tabs_background_white"
                android:layout_width="172dp"
                android:layout_height="27dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2"
                app:tabSelectedTextColor="@color/black"
                app:tabTextColor="@color/middle_gray"
                style="@style/RoundedTabLayoutStyleWhite">
                <com.google.android.material.tabs.TabItem
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/daily"/>
                <com.google.android.material.tabs.TabItem
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/monthly"/>
            </com.google.android.material.tabs.TabLayout>
            <ImageView
                android:id="@+id/ivShopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_shopping"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tab_limits"/>
            <ProgressBar
                android:id="@+id/pb1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="100"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="5dp"
                android:indeterminateTint="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/ivShopping"
                app:layout_constraintEnd_toStartOf="@+id/tvShoppingPercent"
                app:layout_constraintStart_toEndOf="@+id/ivShopping"
                app:layout_constraintTop_toTopOf="@+id/ivShopping"
                style="?android:attr/progressBarStyleHorizontal"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/white"
                android:id="@+id/tvShoppingPercent"
                android:background="@drawable/bg_black_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="36dp"
                android:text="100%"
                android:textAlignment="center"
                android:layout_marginEnd="16dp"
                android:paddingHorizontal="2dp"
                android:paddingVertical="6dp"
                app:layout_constraintBottom_toBottomOf="@+id/ivShopping"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivShopping"/>
            <ImageView
                android:id="@+id/ivContactless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_contactless"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivShopping"/>
            <ProgressBar
                android:id="@+id/pb2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="100"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="5dp"
                android:indeterminateTint="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/ivContactless"
                app:layout_constraintEnd_toStartOf="@+id/tvShoppingPercent"
                app:layout_constraintStart_toEndOf="@+id/ivContactless"
                app:layout_constraintTop_toTopOf="@+id/ivContactless"
                style="?android:attr/progressBarStyleHorizontal"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/white"
                android:id="@+id/tvContactlessPercent"
                android:background="@drawable/bg_black_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="36dp"
                android:text="100%"
                android:textAlignment="center"
                android:layout_marginEnd="16dp"
                android:paddingHorizontal="2dp"
                android:paddingVertical="6dp"
                app:layout_constraintBottom_toBottomOf="@+id/ivContactless"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivContactless"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/tvChangeLimits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/change_limits"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pb2"
                style="@style/Text.Inter.Medium.16"/>
            <View
                android:id="@+id/view1"
                android:background="@color/gray"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvChangeLimits"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clTransaction"
                android:background="@drawable/bg_white_8"
                android:paddingTop="13dp"
                android:paddingBottom="12dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:paddingStart="16dp"
                android:paddingEnd="9dp"
                android:layout_marginHorizontal="@dimen/text_size_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view1">
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:id="@+id/tvTransactionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transactions"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/Text.Inter.Medium"/>
                <TextView
                    android:textSize="13sp"
                    android:id="@+id/tvTransactionDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/see_all_of_your_vault_transaction"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvTransactionTitle"
                    style="@style/Text.Inter.Medium"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:background="@drawable/sl_card_detail_icon_background"
                    android:duplicateParentState="true"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/ic_card_transaction"
                    android:scaleType="center"
                    android:tint="@color/sl_card_detail_icon_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/circleImageView"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl3ds"
                android:background="@drawable/bg_white_8"
                android:paddingTop="13dp"
                android:paddingBottom="12dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="9dp"
                android:layout_marginHorizontal="@dimen/text_size_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clTransaction">
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:id="@+id/tv3dsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_3ds"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/Text.Inter.Medium"/>
                <TextView
                    android:textSize="13sp"
                    android:id="@+id/tv3dsDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/set_3ds_verification"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv3dsTitle"
                    style="@style/Text.Inter.Medium"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:background="@drawable/sl_card_detail_icon_background"
                    android:duplicateParentState="true"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/ic_3ds"
                    android:scaleType="center"
                    android:tint="@color/sl_card_detail_icon_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/circleImageView"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clChangeName"
                android:background="@drawable/bg_white_8"
                android:paddingTop="13dp"
                android:paddingBottom="12dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="9dp"
                android:layout_marginHorizontal="@dimen/text_size_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl3ds">
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:id="@+id/tvChangeNameTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/Text.Inter.Medium"/>
                <TextView
                    android:textSize="13sp"
                    android:id="@+id/tvChangeNameDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/card_nickname_small"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvChangeNameTitle"
                    style="@style/Text.Inter.Medium"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:background="@drawable/sl_card_detail_icon_background"
                    android:duplicateParentState="true"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/ic_edit"
                    android:scaleType="center"
                    android:tint="@color/sl_card_detail_icon_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/circleImageView"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clFreeze"
                android:background="@drawable/bg_white_8"
                android:paddingTop="13dp"
                android:paddingBottom="12dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="9dp"
                android:layout_marginHorizontal="@dimen/text_size_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clChangeName">
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:id="@+id/tvFreezeTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/Text.Inter.Medium"/>
                <TextView
                    android:textSize="13sp"
                    android:id="@+id/tvFreezeDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/temporarily_freeze_your_card"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvFreezeTitle"
                    style="@style/Text.Inter.Medium"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:background="@drawable/sl_card_detail_icon_background"
                    android:duplicateParentState="true"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/ic_card_freeze"
                    android:scaleType="center"
                    android:tint="@color/sl_card_detail_icon_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/circleImageView"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clClose"
                android:background="@drawable/bg_white_8"
                android:paddingTop="13dp"
                android:paddingBottom="12dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="9dp"
                android:layout_marginHorizontal="@dimen/text_size_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clFreeze">
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:id="@+id/tvCloseTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/close"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/Text.Inter.Medium"/>
                <TextView
                    android:textSize="13sp"
                    android:id="@+id/tvCloseDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/close_your_card"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvCloseTitle"
                    style="@style/Text.Inter.Medium"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:background="@drawable/sl_card_detail_icon_background"
                    android:duplicateParentState="true"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/ic_card_close"
                    android:scaleType="center"
                    android:tint="@color/sl_card_detail_icon_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/circleImageView"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:id="@+id/bgEnabled"
                android:background="@color/white"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="0.5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/view2"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</ViewFlipper>
