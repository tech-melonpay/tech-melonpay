<?xml version="1.0" encoding="utf-8"?>
<com.sumsub.sns.core.widget.SNSBackgroundView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/sns_guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="@dimen/sns_margin_medium"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/sns_guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_end="@dimen/sns_margin_medium"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:id="@+id/sns_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/sns_margin_medium"
            android:animateLayoutChanges="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/sns_powered"
            app:layout_constraintEnd_toEndOf="@+id/sns_guideline_end"
            app:layout_constraintStart_toStartOf="@+id/sns_guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/sns_toolbar"/>
        <com.sumsub.sns.core.widget.SNSToolbarView
            android:id="@+id/sns_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"/>
        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sns_margin_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/sns_guideline_end"
            app:layout_constraintStart_toStartOf="@+id/sns_guideline_start"
            layout="@layout/sns_layout_powered"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.sumsub.sns.core.widget.SNSCommonBottomSheetView
        android:id="@+id/sns_eid_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</com.sumsub.sns.core.widget.SNSBackgroundView>
