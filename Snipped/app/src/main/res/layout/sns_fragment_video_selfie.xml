<?xml version="1.0" encoding="utf-8"?>
<com.sumsub.sns.core.widget.SNSBackgroundView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/sns_guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="@dimen/sns_margin_medium"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/sns_guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_end="@dimen/sns_margin_medium"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:id="@+id/sns_guideline_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.8"/>
        <com.sumsub.sns.core.widget.SNSVideoSelfieFrameView
            android:id="@+id/sns_frame"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/sns_guideline_center"
            app:layout_constraintEnd_toEndOf="@+id/sns_guideline_end"
            app:layout_constraintStart_toStartOf="@+id/sns_guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/sns_description_2">
            <androidx.camera.view.PreviewView
                android:id="@+id/sns_camera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.sumsub.sns.core.widget.SNSVideoSelfieFrameView>
        <com.sumsub.sns.core.widget.SNSVideoSelfiePhraseView
            android:layout_gravity="center"
            android:id="@+id/sns_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/sns_margin_large"
            android:paddingHorizontal="@dimen/sns_margin_medium"
            android:paddingVertical="@dimen/sns_margin_small"
            app:layout_constraintBottom_toBottomOf="@+id/sns_guideline_center"
            app:layout_constraintEnd_toEndOf="@+id/sns_guideline_end"
            app:layout_constraintStart_toStartOf="@+id/sns_guideline_start"
            app:layout_constraintTop_toTopOf="@+id/sns_frame"
            app:layout_constraintVertical_bias="0.3"/>
        <ProgressBar
            android:id="@+id/sns_video_circle_progress"
            android:background="@drawable/circle_shape"
            android:layout_width="@dimen/sns_normal_button_size"
            android:layout_height="@dimen/sns_normal_button_size"
            android:max="100"
            android:indeterminate="false"
            android:progressDrawable="@drawable/circular_progress_bar_countdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sns_frame"
            style="?android:attr/progressBarStyleHorizontal"/>
        <com.sumsub.sns.core.widget.SNSH2TextView
            android:textColor="?attr/sns_colorOnProcessing"
            android:id="@+id/sns_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/sns_video_circle_progress"
            app:layout_constraintEnd_toEndOf="@+id/sns_video_circle_progress"
            app:layout_constraintStart_toStartOf="@+id/sns_video_circle_progress"
            app:layout_constraintTop_toTopOf="@+id/sns_video_circle_progress"/>
        <View
            android:id="@+id/sns_stop"
            android:background="@drawable/sns_bg_selfie_stop_rectangle"
            android:layout_width="@dimen/sns_margin_medium"
            android:layout_height="@dimen/sns_margin_medium"
            app:layout_constraintBottom_toBottomOf="@+id/sns_video_circle_progress"
            app:layout_constraintEnd_toEndOf="@+id/sns_video_circle_progress"
            app:layout_constraintStart_toStartOf="@+id/sns_video_circle_progress"
            app:layout_constraintTop_toTopOf="@+id/sns_video_circle_progress"/>
        <View
            android:id="@+id/sns_done"
            android:background="@drawable/ic_done"
            android:layout_width="@dimen/sns_margin_medium"
            android:layout_height="@dimen/sns_margin_medium"
            app:layout_constraintBottom_toBottomOf="@+id/sns_video_circle_progress"
            app:layout_constraintEnd_toEndOf="@+id/sns_video_circle_progress"
            app:layout_constraintStart_toStartOf="@+id/sns_video_circle_progress"
            app:layout_constraintTop_toTopOf="@+id/sns_video_circle_progress"/>
        <com.sumsub.sns.core.widget.SNSH1TextView
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/sns_description_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/sns_description_2"
            app:layout_constraintEnd_toEndOf="@+id/sns_guideline_end"
            app:layout_constraintStart_toStartOf="@+id/sns_guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/sns_toolbar"/>
        <com.sumsub.sns.core.widget.SNSSubtitle2TextView
            android:gravity="center"
            android:id="@+id/sns_description_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sns_margin_small_tiny"
            app:layout_constraintBottom_toTopOf="@+id/sns_frame"
            app:layout_constraintEnd_toEndOf="@+id/sns_guideline_end"
            app:layout_constraintStart_toStartOf="@+id/sns_guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/sns_description_1"/>
        <com.sumsub.sns.core.widget.SNSToolbarView
            android:id="@+id/sns_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"/>
        <include
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sns_margin_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/sns_guideline_end"
            app:layout_constraintStart_toStartOf="@+id/sns_guideline_start"
            layout="@layout/sns_layout_powered"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.sumsub.sns.core.widget.SNSBackgroundView>
