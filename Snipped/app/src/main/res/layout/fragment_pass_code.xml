<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/fragment_pass_code_0"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:gravity="center"
        android:id="@+id/textView_1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="1"
        android:layout_marginStart="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_2"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/text_passcode_number"/>
    <TextView
        android:gravity="center"
        android:id="@+id/textView_2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="40dp"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/textView_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/text_passcode_number"/>
    <TextView
        android:gravity="center"
        android:id="@+id/textView_3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="3"
        android:layout_marginEnd="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_2"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/text_passcode_number"/>
    <TextView
        android:gravity="center"
        android:id="@+id/textView_4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="4"
        android:layout_marginStart="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_5"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/text_passcode_number"/>
    <TextView
        android:gravity="center"
        android:id="@+id/textView_5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="40dp"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@+id/textView_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/text_passcode_number"/>
    <TextView
        android:gravity="center"
        android:id="@+id/textView_6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="6"
        android:layout_marginEnd="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_5"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/text_passcode_number"/>
    <TextView
        android:gravity="center"
        android:id="@+id/textView_7"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="7"
        android:layout_marginStart="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_8"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/text_passcode_number"/>
    <TextView
        android:gravity="center"
        android:id="@+id/textView_8"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="40dp"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@+id/textView_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/text_passcode_number"/>
    <TextView
        android:gravity="center"
        android:id="@+id/textView_9"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="9"
        android:layout_marginEnd="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_8"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/text_passcode_number"/>
    <TextView
        android:textSize="13sp"
        android:textColor="@color/main_color"
        android:gravity="center"
        android:id="@+id/forgot"
        android:visibility="gone"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="-12dp"
        android:text="@string/forgot_passcode"
        android:textAlignment="center"
        style="@style/Text.Inter.Medium"/>
    <TextView
        android:gravity="center"
        android:id="@+id/textView_0"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="22dp"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/text_passcode_number"/>
    <ImageView
        android:id="@+id/bio"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_bio"
        android:layout_marginStart="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_0"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/backspace"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="center"
        android:layout_marginEnd="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_backspace1"/>
    <TextView
        android:textSize="13sp"
        android:textColor="@color/logout_text_color"
        android:gravity="center"
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:text="@string/logout"
        android:paddingVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Text.Inter.Medium"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.34">
        <ImageView
            android:id="@+id/point_1"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_weight="1"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="21dp"
            app:srcCompat="@drawable/elipse_active"/>
        <ImageView
            android:id="@+id/point_2"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="21dp"
            app:srcCompat="@drawable/elipse_disable"/>
        <ImageView
            android:id="@+id/point_3"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="21dp"
            app:srcCompat="@drawable/elipse_disable"/>
        <ImageView
            android:id="@+id/point_4"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="21dp"
            app:srcCompat="@drawable/elipse_disable"/>
        <ImageView
            android:id="@+id/point_5"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="0dp"
            app:srcCompat="@drawable/elipse_disable"/>
    </LinearLayout>
    <TextView
        android:textSize="13sp"
        android:textColor="@color/dark_red"
        android:id="@+id/error_label"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/incorrect_passcode"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Text.Inter"/>
</androidx.constraintlayout.widget.ConstraintLayout>
