<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/dialog_timer_0"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/bg_sort_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
            android:layout_gravity="center"
            android:id="@+id/pb"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_marginTop="44dp"
            android:layout_marginBottom="29dp"
            android:progress="50"
            app:direction="top_to_bottom"
            app:layout_constraintBottom_toTopOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:progressBackgroundColor="@color/background_disable"
            app:progressBackgroundStrokeWidth="4dp"
            app:progressCap="butt"
            app:progressColor="@color/black"
            app:progressStrokeWidth="4dp"/>
        <TextView
            android:textSize="20sp"
            android:textColor="@color/middle_gray"
            android:id="@+id/pintTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/pb"
            app:layout_constraintEnd_toEndOf="@+id/pb"
            app:layout_constraintStart_toStartOf="@+id/pb"
            app:layout_constraintTop_toTopOf="@+id/pb"
            style="@style/Text.Inter.Medium"/>
        <TextView
            android:textSize="28sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="37dp"
            app:layout_constraintBottom_toTopOf="@+id/description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/Text.Inter.Medium"/>
        <TextView
            android:textSize="15sp"
            android:textColor="@color/middle_gray"
            android:gravity="center"
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="37dp"
            android:layout_marginHorizontal="37dp"
            app:layout_constraintBottom_toTopOf="@+id/button_accept"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/Text.Inter.Medium"/>
        <Button
            android:id="@+id/button_accept"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginBottom="@dimen/dialog_bottom_margin"
            android:text="@string/done"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/BlackButton"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
