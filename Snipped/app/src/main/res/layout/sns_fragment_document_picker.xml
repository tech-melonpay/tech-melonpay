<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sns_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sns_camera_preview_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.camera.view.PreviewView
            android:id="@+id/sns_camera_preview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="9:16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.sumsub.sns.core.widget.SNSDocBoundsCheckResultView
            android:id="@+id/sns_doc_detection_result"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="9:16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.sumsub.sns.core.widget.SNSCameraBackgroundView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sns_camera_preview"/>
        <FrameLayout
            android:id="@+id/sns_auto_manual"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:maxHeight="122dp"
            android:minHeight="@dimen/sns_autocapture_switch_min_height"
            android:layout_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sns_toolbar">
            <com.sumsub.sns.core.widget.SNSSegmentedToggleView
                android:layout_gravity="top|center_horizontal"
                android:id="@+id/sns_auto_manual_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sns_margin_medium"
                android:layout_marginBottom="@dimen/sns_margin_medium"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/sns_frame_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/sns_camera_preview"
            app:layout_constraintStart_toStartOf="@+id/sns_camera_preview"
            app:layout_constraintTop_toBottomOf="@+id/sns_auto_manual">
            <com.sumsub.sns.camera.photo.presentation.document.SNSFrameViewWithBackground
                android:id="@+id/sns_frame_with_background"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <FrameLayout
                android:layout_gravity="center"
                android:id="@+id/sns_frame_popup_hint_container"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <include layout="@layout/sns_icon_text_popup_layout"/>
            </FrameLayout>
        </FrameLayout>
        <com.sumsub.sns.core.widget.SNSSubtitle2TextView
            android:ellipsize="end"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/sns_autocapture_hint"
            android:paddingLeft="@dimen/sns_margin_medium"
            android:paddingRight="@dimen/sns_margin_medium"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:minHeight="@dimen/sns_autocapture_hint_min_height"
            android:maxLines="2"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sns_frame_container"
            app:sns_textColor="#ffffffff"/>
        <com.sumsub.sns.core.widget.SNSToolbarViewInverse
            android:id="@+id/sns_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"/>
        <FrameLayout
            android:id="@+id/sns_primary_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/sns_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.sumsub.sns.core.widget.SNSProgressBarView
                android:layout_gravity="center"
                android:id="@+id/sns_primary_button_progress"
                android:visibility="invisible"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:indeterminate="true"
                style="?android:attr/progressBarStyle"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/sns_popup_hint_container_background"
            android:background="@color/sns_auto_capture_frame_background"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="@+id/sns_primary_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sns_toolbar">
            <include layout="@layout/sns_icon_text_popup_layout"/>
        </FrameLayout>
        <com.sumsub.sns.core.widget.SNSPrimaryButton
            android:id="@+id/sns_save_frame"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save frame"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
            android:gravity="start"
            android:orientation="vertical"
            android:id="@+id/sns_debug_info"
            android:background="#aaffffff"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingVertical="@dimen/sns_margin_small"
            app:layout_constraintBottom_toBottomOf="@+id/sns_primary_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/sns_primary_button"
            app:layout_constraintTop_toTopOf="@+id/sns_primary_button">
            <com.sumsub.sns.core.widget.SNSTextView
                android:gravity="center"
                android:id="@+id/sns_doc_bounds_confidence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="gravity"
                app:tint="?android:attr/textColorSecondaryInverse"/>
            <com.sumsub.sns.core.widget.SNSTextView
                android:gravity="center"
                android:id="@+id/sns_good_photo_confidence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sns_margin_small"
                android:textAlignment="gravity"
                app:tint="?android:attr/textColorSecondaryInverse"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="start"
            android:orientation="vertical"
            android:id="@+id/sns_debug_info_right"
            android:background="#aaffffff"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/sns_margin_small"
            app:layout_constraintBottom_toBottomOf="@+id/sns_primary_button"
            app:layout_constraintLeft_toRightOf="@+id/sns_primary_button"
            app:layout_constraintRight_toRightOf="parent">
            <com.sumsub.sns.core.widget.SNSTextView
                android:gravity="center"
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="gravity"
                app:tint="?android:attr/textColorSecondaryInverse"/>
            <com.sumsub.sns.core.widget.SNSTextView
                android:gravity="center"
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sns_margin_small"
                android:textAlignment="gravity"
                app:tint="?android:attr/textColorSecondaryInverse"/>
            <com.sumsub.sns.core.widget.SNSTextView
                android:gravity="center"
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="gravity"
                app:tint="?android:attr/textColorSecondaryInverse"/>
        </LinearLayout>
        <ImageView
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/sns_gallery"
            android:layout_width="@dimen/sns_min_button_size"
            android:layout_height="@dimen/sns_min_button_size"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="@+id/sns_primary_button"
            app:layout_constraintLeft_toRightOf="@+id/sns_primary_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sns_primary_button"
            app:srcCompat="@drawable/sns_ic_gallery"
            app:tint="?android:attr/textColorSecondaryInverse"/>
        <View
            android:id="@+id/sns_dark_overlay"
            android:background="@android:color/black"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.sumsub.sns.core.widget.SNSProgressView
            android:id="@+id/sns_picker_progress"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <FrameLayout
            android:id="@+id/photo_made_indicator"
            android:background="#ffffffff"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <include
        android:id="@+id/sns_helper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:behavior_hideable="false"
        app:behavior_peekHeight="@dimen/sns_collapsed_intro_height"
        app:layout_behavior="@string/bottom_sheet_behavior"
        layout="@layout/sns_layout_document_picker_helper"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
