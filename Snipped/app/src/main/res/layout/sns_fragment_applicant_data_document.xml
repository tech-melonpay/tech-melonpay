<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:orientation="vertical"
        android:id="@+id/sns_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="@dimen/sns_margin_medium"
        android:paddingEnd="@dimen/sns_margin_medium"
        app:layout_constraintBottom_toTopOf="@+id/sns_primary_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sns_toolbar"/>
    <com.sumsub.sns.core.widget.SNSPrimaryButton
        android:id="@+id/sns_primary_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sns_margin_medium"
        android:layout_marginStart="@dimen/sns_margin_medium"
        android:layout_marginEnd="@dimen/sns_margin_medium"
        app:layout_constraintBottom_toTopOf="@+id/sns_powered"/>
    <com.sumsub.sns.core.widget.SNSToolbarView
        android:id="@+id/sns_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sns_margin_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        layout="@layout/sns_layout_powered"/>
</androidx.constraintlayout.widget.ConstraintLayout>
